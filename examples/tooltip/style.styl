.style-1 {
  &.tooltip-content {
    background-color: #444;
    border-radius: .5rem;
    border: solid black .1rem;
    box-shadow: .2rem .2rem .2rem rgba(0, 0, 0, .25);
    color: white;
    opacity: 0;
    padding: 0 .5rem;
    transition: opacity .5s, visibility .5s;
    visibility: hidden;

    &.is-active {
      opacity: 1;
      visibility: visible;
    }
  }
}
