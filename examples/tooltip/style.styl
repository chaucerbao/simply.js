.style-1 {
  &.tooltip-content {
    background-color: #444;
    border-radius: .5rem;
    border: solid black .1rem;
    box-shadow: .2rem .2rem .2rem rgba(0, 0, 0, .25);
    color: white;
    opacity: 0;
    padding: 0 .5rem;
    transition: opacity .5s, visibility .5s;
    visibility: hidden;

    &.is-active {
      opacity: 1;
      visibility: visible;
    }
  }
}

.style-2 {
  border-width = 9px;
  inner-border-width = 8px;
  &.tooltip-content {
    background-color: white;
    border: solid black 1px;
    box-shadow: .2rem .2rem .2rem rgba(0, 0, 0, .25);
    margin-top: -1 * border-width;
    opacity: 0;
    padding: 0 .5rem;
    transform: translateY(.5rem);
    transition: transform .5s, opacity .5s, visibility .5s;
    visibility: hidden;
    &:before, &:after {
      content: ' ';
      position: absolute; left: 50%;
      width: 0; height: 0;
    }
    &:after {
      border-left: solid transparent inner-border-width;
      border-right: solid transparent inner-border-width;
      border-top: solid white inner-border-width;
      bottom: -1 * inner-border-width;
      margin-left: -1 * (inner-border-width / 2);
    }
    &:before {
      border-left: solid transparent border-width;
      border-right: solid transparent border-width;
      border-top: solid black border-width;
      bottom: -1 * border-width;
      margin-left: -1 * (border-width / 2);
    }

    &.is-active {
      opacity: 1;
      transform: translateY(0);
      visibility: visible;
    }
  }
}
